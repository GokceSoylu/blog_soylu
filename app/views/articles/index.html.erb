<h1>ARCHIVE</h1>

<table>
    <tr>

        <th>Title</th>
        <th>Text</th>
        <th></th>

    </tr>

    <%@articles.each do |article|%>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'show', article_path(article) %></td>
        <td><<%= link_to "edit", articles_path %></td>
        <td><%= link_to 'delete', article_path(article),
         data:{turbo_method: :delete,
         turbo_confirm: 'are you sure?'} %></td>
    </tr>
    <%end%>
</table>

